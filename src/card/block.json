{
	"name": "bootstrap-hooks/card",
	"category": "bootstrap",
	"attributes": {
		"parent": {
			"type": "number"
		},
		"align": {
			"type": "string",
			"default": "wide"
		},
		"backgroundColor": {
			"type": "string"
		},
		"textColor": {
			"type": "string"
		},
		"customBackgroundColor": {
			"type": "string"
		},
		"mediaAlt": {
			"type": "string",
			"source": "attribute",
			"selector": "figure img",
			"attribute": "alt",
			"default": ""
		},
		"mediaPosition": {
			"type": "string",
			"default": "left"
		},
		"mediaId": {
			"type": "number"
		},
		"mediaUrl": {
			"type": "string",
			"source": "attribute",
			"selector": "figure video,figure img",
			"attribute": "src"
		},
		"mediaType": {
			"type": "string"
		},
		"mediaWidth": {
			"type": "number",
			"default": 50
		},
		"isStackedOnMobile": {
			"type": "boolean",
			"default": false
		},
		"verticalAlignment": {
			"type": "string"
		},
		"imageFill": {
			"type": "boolean"
		},
		"mediaSize": {
			"type": "string",
			"default": "thumbnail"
		},
		"mediaSizes": {
			"type": "object",
			"default": {}
		},
		"focalPoint": {
			"type": "object"
		},
		"mediaOverlay": {
			"type": "boolean"
		},
		"overlayTextColor": {
			"type": "string",
			"default": "light"
		}
	}
}
